h3 {{title}}
.row
  .col-xs-4
    .panel.panel-primary
      .panel-heading
        h3#search.panel-title Search
      .panel-body
        form(role='form', name='locationForm', novalidate)
          input#lat.form-control(type='hidden', ng-model='loc.lat')
          input#lng.form-control(type='hidden', ng-model='loc.lng')
          input#name.form-control(type='hidden', ng-model='loc.name')
          .form-group
            label(for='street') Street
            input#street.form-control(type='text', name='street', ng-model='loc.street', required, autofocus)
          .form-group
            label(for='city') City
            input#city.form-control(type='text', name='city', ng-model='loc.city', required)
          .form-group
            label(for='state') State
            input#state.form-control(type='text', name='state', ng-model='loc.state', required)
          .form-group
            label(for='zip') ZIP
            input#zip.form-control(type='text', name='zip', ng-model='loc.zip', required)
          .form-group
          button.btn.btn-success(ng-show='locationForm.$valid', ng-click='search()') Voltron GO!
          button.btn.btn-success(ng-show='locationForm.$valid', ng-click='searchPermits()') Find Permits
          button.btn.btn-success(ng-show='locationForm.$valid', ng-click='searchApps()') Find Apps
  .col-xs-4
    #map
  .col-xs-4
    .panel.panel-primary
      .panel-heading
        h3#details.panel-title Details
      .panel-body
        dl.dl-horizontal
          dt Median Home Value:&nbsp;
          dd "value"
          br
          dt Stability:&nbsp;
          dd "stability"
          br
          dt Good/Bad Investment:&nbsp;
          dd "Go for it! || RUN AWAY!"
          br
.row
  .col-xs-2
  .col-xs-8
    include tabs
  .col-xs-1

.row#debug
  .col-xs-12
    pre {{loc | json}}
    pre {{permits | json}}
    pre {{devApps | json}}
