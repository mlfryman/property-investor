h4 {{title}}
.row
  .col-xs-3
    .panel.panel-primary
      .panel-heading
        h3#search.panel-title Search
      .panel-body
        form(role='form', name='locForm', ng-pattern='/^[0-9]{5}$/', novalidate)
          fieldset
            input#lat.form-control(type='hidden', name='loc.lat')
            input#lng.form-control(type='hidden', name='loc.lng')
            .form-group
              label(for='street') Street
              input#street.form-control(type='text', name='street', ng-model='loc.street', required, autofocus)
            .form-group
              label(for='city') City
              input#city.form-control(type='text', name='city', ng-model='loc.city', required)
            .form-group
              label(for='state') State
              input#state.form-control(type='text', name='state', ng-model='loc.state', required)
            .form-group
              label(for='zip') ZIP
              input#zip.form-control(type='text', name='zip', ng-model='loc.zip', required)
            .form-group
            button.btn.btn-success(ng-show='locForm.$valid', ng-click='search()') Voltron GO!
  .col-xs-5
    #map
  .col-xs-4
    .panel.panel-primary
      .panel-heading
        h3#details.panel-title Details
      .panel-body
        dl.dl-horizontal
          dt Median Home Value:
          dd "value"
          br
          dt Stability:&nbsp;
          dd "stable || not stable"
          br
          dt Good/Bad Investment:
          dd "Go for it! || RUN AWAY!"
          br
.row
  .col-xs-2
    hr
    h6 --SEARCH ADDRESS--
    pre {{loc.street | json}}
    pre {{loc.city | json}}
    pre {{loc.state | json}}
    pre {{loc.zip | json}}
  .col-xs-8
    include tabs
  .col-xs-2
