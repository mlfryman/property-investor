h3 {{title}}
.row
  .col-xs-1
  .col-xs-2
    .panel.panel-primary
      .panel-heading
        h3#search.panel-title Search
        .panel-body
          form(role='form', name='locationForm', novalidate)
            input#lat.form-control(type='hidden', name='loc.lat')
            input#lng.form-control(type='hidden', name='loc.lng')
            .form-group
              label(for='street') Street
              input#street.form-control(type='text', name='street', ng-model='loc.street', required, autofocus)
            .form-group
              label(for='city') City
              input#city.form-control(type='text', name='city', ng-model='loc.city', required)
            .form-group
              label(for='state') State
              input#state.form-control(type='text', name='state', ng-model='loc.state', required)
            .form-group
              label(for='zip') ZIP
              input#zip.form-control(type='text', name='zip', ng-model='loc.zip', required)
            .form-group
            button.btn.btn-success(ng-show='locationForm.$valid', ng-click='search()') Voltron GO!
  .col-xs-6
    #map
  .col-xs-2
    .panel.panel-primary
      .panel-heading
        h3#details.panel-title Details
        .panel-body
          dl.dl-horizontal
            dt Median Home Value:&nbsp;
            dd "value"
            br
            dt Stability:&nbsp;
            dd "stability"
            br
            dt Good/Bad Investment:&nbsp;
            dd "Go for it! || RUN AWAY!"
            br
  .col-xs-1
.row
  .col-xs-2
  .col-xs-8
    include tabs
  .col-xs-1
